---
import "../styles/global.css";

const {
  title = "Residential Care for Young People | Inguz Care",
  description = "We provide safe, nurturing homes with tailored support plans, helping young people grow, learn, and thrive.",
  ogImage = "/logo.jpg",
} = Astro.props;

const canonical = Astro.site
  ? new URL(Astro.url.pathname + Astro.url.search, Astro.site).toString()
  : undefined;

const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  name: "Inguz Care",
  url: "https://www.inguzcare.co.uk",
  description:
    "Specialised residential care homes for young people. Trauma-informed, relationship-based support with tailored plans.",
  telephone: "01234 567 890",
  image: new URL(ogImage, Astro.site ?? "https://www.inguzcare.co.uk").toString(),
  logo: new URL("/logo.jpg", Astro.site ?? "https://www.inguzcare.co.uk").toString(),
  address: {
    "@type": "PostalAddress",
    addressLocality: "Radcliffe",
    addressRegion: "Greater Manchester",
    addressCountry: "GB",
  },
  sameAs: [],
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}

    <meta name="robots" content="index,follow" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical ?? "https://www.inguzcare.co.uk"} />
    <meta property="og:site_name" content="Inguz Care" />
    <meta property="og:image" content={new URL(ogImage, Astro.site ?? "https://www.inguzcare.co.uk").toString()} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site ?? "https://www.inguzcare.co.uk").toString()} />
    <link rel="icon" href="/logo.jpg" />
    <meta name="theme-color" content="#5f7c7b" />

    <script type="application/ld+json">{JSON.stringify(schema)}</script>
  </head>

  <body class="min-h-screen bg-white text-slate-900">
    <!-- Header -->
    <header class="border-b bg-white">
      <div class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between gap-3">
        <!-- Brand -->
        <a href="/" class="flex items-center gap-3">
          <img src="/logo.jpg" alt="Inguz Care logo" class="h-10 w-10 rounded-md object-cover" />
          <span class="font-semibold text-lg">Inguz Care</span>
        </a>

        <!-- Desktop nav (md+) -->
        <nav class="hidden md:flex items-center gap-4 text-base">
          <a class="hover:text-[#5f7c7b]" href="/our-homes">Our Homes</a>
          <a class="hover:text-[#5f7c7b]" href="/services">Services</a>

          <!-- About dropdown on desktop only -->
          <div class="relative group">
            <button type="button" class="flex items-center gap-1 hover:text-[#5f7c7b] py-2" aria-haspopup="menu" aria-expanded="false">
              About <span aria-hidden="true">▾</span>
            </button>
            <ul
              class="absolute left-0 top-full w-56 rounded-xl border bg-white shadow-md p-2 z-50
                     invisible opacity-0 translate-y-1 transition
                     group-hover:visible group-hover:opacity-100 group-hover:translate-y-0
                     group-focus-within:visible group-focus-within:opacity-100 group-focus-within:translate-y-0"
              role="menu">
              <li><a class="block rounded-lg px-3 py-2 hover:bg-slate-50" href="/team" role="menuitem">Meet the Team</a></li>
              <li><a class="block rounded-lg px-3 py-2 hover:bg-slate-50" href="/careers" role="menuitem">Careers with Inguz Care</a></li>
              <li class="mt-1 border-t pt-1"><a class="block rounded-lg px-3 py-2 hover:bg-slate-50" href="/about" role="menuitem">About Inguz Care</a></li>
            </ul>
          </div>

          <a href="/contact" class="px-4 py-2 rounded-lg bg-[#5f7c7b] text-white font-semibold hover:bg-[#3d5756]">Contact</a>
        </nav>

        <!-- Mobile menu button (shows on small screens) -->
        <button
          id="menuBtn"
          class="md:hidden inline-flex items-center justify-center rounded-md border px-3 py-2 text-sm font-medium hover:bg-slate-50"
          aria-controls="mobileMenu"
          aria-expanded="false"
          aria-label="Open menu">
          Menu
        </button>
      </div>

      <!-- Mobile menu panel -->
      <div id="mobileMenu" class="md:hidden hidden border-t bg-white">
        <nav class="max-w-6xl mx-auto px-4 py-3 flex flex-col gap-1 text-base">
          <a class="rounded-lg px-3 py-2 hover:bg-slate-50" href="/our-homes">Our Homes</a>
          <a class="rounded-lg px-3 py-2 hover:bg-slate-50" href="/services">Services</a>
          <!-- flatten About links on mobile so they’re easy to tap -->
          <a class="rounded-lg px-3 py-2 hover:bg-slate-50" href="/about">About Inguz Care</a>
          <a class="rounded-lg px-3 py-2 hover:bg-slate-50" href="/team">Meet the Team</a>
          <a class="rounded-lg px-3 py-2 hover:bg-slate-50" href="/careers">Careers with Inguz Care</a>
          <a class="mt-1 rounded-lg px-3 py-2 bg-[#5f7c7b] text-white font-semibold hover:bg-[#3d5756]" href="/contact">Contact</a>
        </nav>
      </div>
    </header>

    <!-- Main content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t bg-slate-50 mt-10">
      <div class="max-w-6xl mx-auto px-4 py-10 grid gap-8 sm:grid-cols-2 md:grid-cols-4">
        <div>
          <a href="/" class="flex items-center gap-3">
            <img src="/logo.jpg" alt="Inguz Care logo" class="h-10 w-10 rounded-md object-cover" />
            <span class="font-semibold">Inguz Care</span>
          </a>
          <p class="mt-3 text-sm text-slate-600">
            Nurturing, stable homes where children and young people can feel safe, settle and thrive.
          </p>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-slate-900">Site</h3>
          <ul class="mt-3 space-y-2 text-sm">
            <li><a class="hover:text-[#5f7c7b]" href="/our-homes">Our Homes</a></li>
            <li><a class="hover:text-[#5f7c7b]" href="/services">Services</a></li>
            <li><a class="hover:text-[#5f7c7b]" href="/about">About</a></li>
            <li><a class="hover:text-[#5f7c7b]" href="/team">Meet the Team</a></li>
            <li><a class="hover:text-[#5f7c7b]" href="/careers">Careers</a></li>
            <li><a class="hover:text-[#5f7c7b]" href="/contact">Contact</a></li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-slate-900">Legal</h3>
          <ul class="mt-3 space-y-2 text-sm">
            <li><a class="hover:text-[#5f7c7b]" href="/privacy">Privacy Policy</a></li>
            <li><a class="hover:text-[#5f7c7b]" href="/terms">Terms &amp; Conditions</a></li>
            <li><a class="hover:text-[#5f7c7b]" href="/cookies">Cookies</a></li>
          </ul>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-slate-900">Contact</h3>
          <ul class="mt-3 space-y-2 text-sm">
            <li>Email: <a class="hover:text-[#5f7c7b]" href="mailto:hello@inguzcare.co.uk">inguzcare@outlook.com</a></li>
            <li>Phone: <a class="hover:text-[#5f7c7b]" href="tel:01234567890">Currently Unavailable</a></li>
          </ul>
        </div>
      </div>

      <div class="border-t">
        <div class="max-w-6xl mx-auto px-4 py-6 text-xs text-slate-500 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3">
          <p>© {new Date().getFullYear()} Inguz Care. All rights reserved.</p>
          <p>Registered in England &amp; Wales.</p>
        </div>
      </div>
    </footer>

    <!-- Scripts: desktop About aria + mobile menu toggle -->
    <script is:inline>
      // Desktop About dropdown: keep aria-expanded in sync
      const aboutGroup = document.querySelector('header .group');
      if (aboutGroup) {
        const btn = aboutGroup.querySelector('button');
        const set = (v) => btn && btn.setAttribute('aria-expanded', String(v));
        aboutGroup.addEventListener('mouseenter', () => set(true));
        aboutGroup.addEventListener('mouseleave', () => set(false));
        aboutGroup.addEventListener('focusin', () => set(true));
        aboutGroup.addEventListener('focusout', (e) => {
          if (!aboutGroup.contains(e.relatedTarget)) set(false);
        });
      }

      // Mobile menu toggle
      const menuBtn = document.getElementById('menuBtn');
      const mobileMenu = document.getElementById('mobileMenu');
      if (menuBtn && mobileMenu) {
        menuBtn.addEventListener('click', () => {
          const isHidden = mobileMenu.classList.contains('hidden');
          mobileMenu.classList.toggle('hidden');
          menuBtn.setAttribute('aria-expanded', String(isHidden));
        });

        // Close menu when resizing up to desktop
        window.addEventListener('resize', () => {
          if (window.innerWidth >= 768 && !mobileMenu.classList.contains('hidden')) {
            mobileMenu.classList.add('hidden');
            menuBtn.setAttribute('aria-expanded', 'false');
          }
        });
      }
    </script>
  </body>
</html>
